@model IEnumerable<PatientDemographics>

<div class="container p-3">
    <h2 class="text-primary pt-3 pb-2 text-center">Patient Demographics List</h2>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>ITSS ID</th>
                <th>Patient Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>DateofBirth</th>
                <th>Nationality</th>
                <th>Age</th>
                <th>RecordNumber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="5%">
                        @obj.Id
                    </td>
                    <td width="5%">
                        @obj.ITSSID
                    </td>
                    <td width="15%">
                       @obj.PatientFirstName @obj.PatientLastName
                    </td> 
                    <td width="20%">
                       @obj.Address
                    </td> 
                    <td width="20%">
                       @obj.Phone
                    </td>
                     <td width="10%">
                       @obj.DateofBirth
                    </td>
                     <td width="10%">
                       @obj.Nationality
                    </td>
                     <td width="5%">
                       @obj.Age
                    </td>
                     <td width="10%">
                       @obj.RecordNumber
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>